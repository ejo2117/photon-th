{
	"compilerOptions": {
		"outDir": "./dist/",
		"noImplicitAny": true,
		"module": "es6",
		"target": "es5",
		"jsx": "react",
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"moduleResolution": "Node",
		"baseUrl": "./src",
		"paths": {
			"@components/*": ["components/*"],
			"@lib/*": ["lib/*"],
			"@services/*": ["services/*"],
			"@utils/*": ["utils/*"]
		}
	}
}
